# Email MCP Server — Environment Variables
# Copy this file to .env and fill in your values

# Path to the Silver vault root (absolute path)
VAULT_PATH=/absolute/path/to/silver

# SMTP credentials (Gmail example — use App Password if 2FA enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASS=your-app-password-here
SMTP_FROM="Your Name <your.email@gmail.com>"
